# ===========================================
# Dashboard Frontend Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# All NEXT_PUBLIC_* variables are exposed to the browser

# ===========================================
# API Configuration (Required)
# ===========================================

# Backend API base URL (include /api suffix)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ===========================================
# Tenant Configuration (Required for MVP)
# ===========================================

# Default tenant UUID - must match a valid tenant in the database
# This will be replaced with dynamic tenant resolution in the future
NEXT_PUBLIC_DEFAULT_TENANT_ID=8c63afa2-f959-41f8-a548-7bf2a31524da

# ===========================================
# Application Settings (Optional)
# ===========================================

# Display name shown in the UI
NEXT_PUBLIC_APP_NAME=Borg Dashboard

# Environment indicator: development | staging | production
# Used for conditional UI elements (e.g., debug tools in dev)
NEXT_PUBLIC_APP_ENV=development
