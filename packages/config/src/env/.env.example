# ===========================================
# Application Configuration
# ===========================================

# Environment: development | production | test
NODE_ENV=development

# Port the application will listen on
PORT=3001

# API route prefix (e.g., /api/v1/users)
API_PREFIX=api

# ===========================================
# Database Configuration (TypeORM PostgreSQL)
# ===========================================

# Database host
DB_HOST=localhost

# Database port (default: 5432 for PostgreSQL)
DB_PORT=5432

# Database username
DB_USERNAME=postgres

# Database password (can be empty for local dev)
DB_PASSWORD=

# Database name
DB_DATABASE=jobboard_db

# Synchronize database schema (WARNING: set to false in production!)
# When true, TypeORM will auto-create/update tables based on entities
DB_SYNCHRONIZE=true

# Enable database query logging
DB_LOGGING=false
